<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <color name = "lightyellow">#F0F2C6</color>
    <color name = "darkeryellow">#EFF48D</color>
  
    <style name = "NikitaTheme" parent = "android:Theme.Holo.Light">
        <item name = "android:windowBackground">@color/lightyellow</item>
        <item name = "android:colorBackground">@color/lightyellow</item>
        <item name = "android:actionBarStyle">@style/NikitaTitleBar</item>
    </style>
    
    <style name = "NikitaTitleBar" parent = "android:style/Widget.Holo.Light.ActionBar">
        <item name = "android:colorBackground">@color/darkeryellow</item>
        <item name = "android:background">@color/darkeryellow</item>
    </style>

</resources>
